<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">




    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_gravity="center"

        />



    <EditText
        android:id="@+id/Name_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_gravity="center"
        />











    <EditText
        android:id="@+id/username_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType=""
        android:hint="UserName"
        android:layout_marginTop="15dp"/>


    <EditText
        android:id="@+id/phone_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="11"
        android:inputType="phone"
        android:layout_gravity="center"
        android:hint="Phone"
        android:layout_marginTop="15dp"/>



    <EditText
        android:id="@+id/password_service"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/confirm_password_service"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>


    <Button
        android:id="@+id/register_button__customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#4C4B4B"
        android:onClick="register_customer"
        android:text="Register Customer"
        android:textColor="#F1F0F0" />

    <Button
        android:id="@+id/register_button__service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#4C4B4B"
        android:onClick="register_service"
        android:text="Register Service Provider"
        android:textColor="#F1F0F0" />









</LinearLayout>